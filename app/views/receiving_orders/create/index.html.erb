<div class="form-wrap">
<div class="wrap">
  <%= form_with model: @order, url: receiving_orders_create_submit_path(@item), class: 'form', local: true do |order| %>
  <h2 class="form__heading">「<%= @item.name %>」の新規受注作成</h2>
  <% if defined? @new_order %>
  <% if @new_order.errors.any? %>
    <ul class="err-list">
      <% @new_order.errors.full_messages.each do |message| %>
        <li class="err-list__item"><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <% end %>
    <div class="form__item">
      <%= order.label :quantity, '数量', class: 'form__label' %><br />
      <%= order.text_field :quantity, autofocus: true, autocomplete: "quantity", class: 'form__input' %>
    </div>

    <div class="form__item">
      <%= order.label :client_id, '発注元', class: 'form__label' %><br />
      <%= order.collection_select :client_id, Client.all, :id, :name, { prompt: "選択してください" }, { class: 'form__select' } %>
    </div>

    <div class="form__item">
      <%= order.label :worker_id, '責任者', class: 'form__label' %><br />
      <%= order.collection_select :worker_id, Worker.all, :id, :name, { prompt: "選択してください" }, { class: 'form__select' } %>
    </div>

    <div class="form__item">
      <%= order.label :notes, '備考', class: 'form__label' %><br />
      <%= order.text_area :notes, rows: 5, class: 'form__textarea' %>
    </div>

    <div class="form__item last">
      <%= order.submit '受注', class: 'form__submit' %>
    </div>

  <% end %>
  </div>
</div>
