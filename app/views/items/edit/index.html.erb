<div class="form-wrap">
<div class="wrap">
  <%= form_with model: @item, url: items_edit_submit_path(@item), class: 'form' do |item| %>
    <div class="form__item">
      <%= item.label :name, '商品名', class: 'form__label' %><br />
      <%= item.text_field :name, autofocus: true, autocomplete: "name", class: 'form__input' %>
    </div>

    <div class="form__item">
      <%= item.label :price, '値段', class: 'form__label' %><br />
      <%= item.text_field :price, autofocus: true, autocomplete: "price", class: 'form__input' %>
    </div>

    <div class="form__item">
      <%= item.label :stock, '在庫数', class: 'form__label' %><br />
      <%= item.text_field :stock, autofocus: true, autocomplete: "stock", class: 'form__input' %>
    </div>

    <div class="form__item last">
      <%= item.submit '更新', class: 'form__submit' %>
    </div>

  <% end %>
  </div>
</div>
